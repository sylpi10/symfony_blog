{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container">
    {{form_start(form)}}
    {{form_errors(form)}}
    {{form_row(form.email)}}
    {{form_row(form.plainPassword)}}
    {{form_row(form.pseudo)}}
    <button type="submit" class="btn btn-primary my-3">Register</button>
{{form_end(form)}}

</div>
{% endblock %}
